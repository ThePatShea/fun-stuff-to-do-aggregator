- if (post)
  section#post
    h1= post['name']
    div.img_container
      div.img_container_inner
        img(src=post['pic_big'])
    div.attributes
      ul
        li
          p.heading when:
          p= post['full_time']
        li
          p.heading where: 
          p= post['location']
    pre.description= post['description']

